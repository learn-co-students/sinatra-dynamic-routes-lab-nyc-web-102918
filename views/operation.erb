<% case @operation
when "add" %>
<%= @num1 + @num2 %>
<% when "subtract" %>
<%= @num1 - @num2 %>
<% when "multiply" %>
<%= @num1 * @num2 %>
<% when "divide" %>
<%= @num1 / @num2 %>
<% end %>

